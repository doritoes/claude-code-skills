# =============================================================================
# Folding@Cloud GCP Configuration - One-Shot GPU
# Copy to terraform.tfvars and fill in values
# =============================================================================

# GCP Configuration
gcp_project = "your-project-id"
gcp_region  = "us-central1"
gcp_zone    = "us-central1-a"

# Instance Configuration
machine_type = "n1-standard-4"  # 4 vCPUs, 15GB RAM - good for T4
gpu_type     = "nvidia-tesla-t4"
gpu_count    = 1
disk_size_gb = 50

# IMPORTANT: Never use spot for Folding@Home (WUs get abandoned on preemption)
use_spot = false

# SSH Configuration
ssh_user       = "foldingadmin"
ssh_public_key = "ssh-ed25519 AAAA... your-key-here"

# Folding@Home Configuration (get from https://v8-4.foldingathome.org/)
fah_account_token = "your-account-token"
fah_machine_name  = "pai-fold-gpu-gcp"
fah_team_id       = "245143"
fah_passkey       = "your-passkey"

# One-Shot Mode (complete 1 GPU WU then pause)
one_shot_mode = true
