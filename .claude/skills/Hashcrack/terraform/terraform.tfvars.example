# =============================================================================
# Hashcrack XCP-ng Deployment Configuration - EXAMPLE
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values
# =============================================================================

# =============================================================================
# Xen Orchestra Connection
# =============================================================================

xo_url      = "wss://YOUR_XO_HOST"
xo_username = "admin"
xo_password = "CHANGE_ME"

# =============================================================================
# Infrastructure Configuration
# =============================================================================

worker_count     = 2
server_cpus      = 2
server_memory_gb = 4
worker_cpus      = 4
worker_memory_gb = 8

# =============================================================================
# Hashtopolis Credentials - CHANGE THESE
# =============================================================================

hashtopolis_admin_user     = "admin"
hashtopolis_admin_password = "CHANGE_ME"

# =============================================================================
# SSH Access - REPLACE WITH YOUR KEY
# =============================================================================

ssh_public_key = "ssh-ed25519 AAAA... your-key-comment"
