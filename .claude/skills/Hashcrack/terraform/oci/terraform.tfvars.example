# =============================================================================
# Hashcrack OCI Deployment - Example Configuration
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values
# =============================================================================

# =============================================================================
# OCI Authentication (REQUIRED)
# Get these from OCI Console -> User Settings -> API Keys
# =============================================================================

tenancy_ocid     = "ocid1.tenancy.oc1..aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxx"
user_ocid        = "ocid1.user.oc1..aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxx"
fingerprint      = "xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx"
private_key_path = "~/.oci/oci_api_key.pem"

# Optional: Compartment for resources (defaults to tenancy root)
# compartment_ocid = "ocid1.compartment.oc1..aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# Region Selection
# =============================================================================
# Available regions: us-ashburn-1, us-phoenix-1, eu-frankfurt-1, uk-london-1, etc.
# See: https://docs.oracle.com/en-us/iaas/Content/General/Concepts/regions.htm

region       = "us-ashburn-1"
project_name = "hashcrack"
environment  = "lab"

# =============================================================================
# Server Configuration
# =============================================================================
# VM.Standard.E4.Flex is recommended for cost efficiency
# Flex shapes allow custom OCPU and memory configuration

server_shape     = "VM.Standard.E4.Flex"
server_ocpus     = 2
server_memory_gb = 8
server_disk_gb   = 50

# =============================================================================
# Worker Configuration - CPU
# =============================================================================
# Preemptible instances offer up to 50% cost savings but can be reclaimed
# VM.Standard.E4.Flex provides good CPU performance for hashcat

cpu_worker_count     = 4
cpu_worker_shape     = "VM.Standard.E4.Flex"
cpu_worker_ocpus     = 4   # 4 OCPUs = ~4 vCPUs
cpu_worker_memory_gb = 8
worker_disk_gb       = 30
use_preemptible      = true

# =============================================================================
# Worker Configuration - GPU (Optional)
# =============================================================================
# GPU shapes available:
#   VM.GPU2.1  - 1x P100 (16GB) - Good for hashcracking
#   VM.GPU3.1  - 1x V100 (16GB) - Better performance
#   BM.GPU4.8  - 8x A100 (40GB) - Maximum performance (bare metal)
# Note: GPU availability varies by region

gpu_worker_count = 0
gpu_worker_shape = "VM.GPU2.1"

# =============================================================================
# SSH Access
# =============================================================================

ssh_public_key = "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAA... your-key-here"
ssh_user       = "ubuntu"

# =============================================================================
# Hashtopolis Credentials
# =============================================================================

hashtopolis_admin_user     = "hashcrack"
hashtopolis_admin_password = "Hashcrack2025Lab"
worker_voucher             = "OCI4WORKERS"
