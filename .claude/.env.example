# PAI Environment Configuration
# Copy this to .env and fill in your actual values

# ============================================================================
# AI API Keys (need at least ONE for art skill)
# ============================================================================
GOOGLE_API_KEY=your-google-api-key
REPLICATE_API_TOKEN=your-replicate-token
OPENAI_API_KEY=your-openai-key
REMOVEBG_API_KEY=your-removebg-key

# ============================================================================
# Lab Infrastructure (for automation scripts)
# ============================================================================
PROXMOX_HOST=192.168.99.205
PROXMOX_USER=root@pam
PROXMOX_TOKEN_ID=your-token-id
PROXMOX_TOKEN_SECRET=your-token-secret

PFSENSE_HOST=192.168.99.254
PFSENSE_USER=admin

XCPNG_HOST=192.168.99.209
XCPNG_USER=root

# ============================================================================
# AWS Credentials (for Hashcrack cloud deployment)
# ============================================================================
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_DEFAULT_REGION=us-east-1

# ============================================================================
# PAI Configuration
# ============================================================================
PAI_DIR=C:/Users/<your-username>/AI-Projects
ENGINEER_NAME=<your-username>

# ============================================================================
# BIGRED Local GPU (ExpandedPasswordList)
# ============================================================================
BIGRED_HOST=<gpu-host-ip>
BIGRED_USER=<ssh-username>
BIGRED_SSH_KEY=~/.ssh/<key-name>
BIGRED_WORK_DIR=/home/<user>/hashcat-work
