# =============================================================================
# FoldingAtCloud Environment Variables
# Copy to .env and fill in values
# =============================================================================

# -----------------------------------------------------------------------------
# Folding@Home Configuration
# Get from: https://v8-4.foldingathome.org/ (Settings > Account Token)
# -----------------------------------------------------------------------------

FAH_ACCOUNT_TOKEN=your-account-token
FAH_TEAM_ID=245143
FAH_PASSKEY=your-passkey

# -----------------------------------------------------------------------------
# Budget Tracking (optional)
# Used by BudgetTracker.ts
# -----------------------------------------------------------------------------

FOLDING_BUDGET_DAILY=10.00
FOLDING_BUDGET_MONTHLY=100.00
FOLDING_GRACEFUL_TIMEOUT=1800

# -----------------------------------------------------------------------------
# SSH Configuration (optional, can also be in terraform.tfvars)
# -----------------------------------------------------------------------------

# SSH_USER=foldingadmin
# SSH_KEY=~/.ssh/id_ed25519

# -----------------------------------------------------------------------------
# Cloud Provider Credentials
# Configure via standard methods:
#   AWS: aws configure
#   Azure: az login
#   GCP: gcloud auth application-default login
#   OCI: ~/.oci/config
# -----------------------------------------------------------------------------

# AWS (optional, prefer aws configure)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1

# Azure (optional, prefer az login)
# ARM_SUBSCRIPTION_ID=
# ARM_TENANT_ID=
# ARM_CLIENT_ID=
# ARM_CLIENT_SECRET=

# GCP (optional, prefer gcloud auth)
# GOOGLE_CREDENTIALS=
# GOOGLE_PROJECT=

# OCI (use ~/.oci/config instead)
